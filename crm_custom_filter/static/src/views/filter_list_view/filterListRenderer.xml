<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="FilterListRenderer" t-inherit="web.ListRenderer" t-inherit-mode="primary">
        <xpath expr="//t[@t-if='showNoContentHelper']" position="after">
            <div class="col-lg-12 col-md-12 pb-3">
                <div class="col-lg-5 col-md-5 p-2">
                    <div class="d-flex gap-2 align-items-center">
                        <div class="w-auto fs-5">Sales Person:</div>
                        <div>
                            <MultiRecordSelector t-props="multiRecordProps"/>
                        </div>
                    </div>
                    <div class="pt-2">
                        <button type="button" class="btn btn-primary" t-on-click="applySPFilter">Apply</button>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>