<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.domain</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@widget='res_partner_many2one']" position="before">
                <field name="partner_domain" invisible="1"/>
            </xpath>
            <xpath expr="//field[@widget='res_partner_many2one']" position="attributes">
                <attribute name="domain">partner_domain</attribute>
            </xpath>
            <xpath expr="//page[@id='aml_tab']/field/tree/field[@name='partner_id']" position="before">
                <field name="partner_type"/>
                <field name="partner_domain" column_invisible="1"/>
            </xpath>
            <xpath expr="//page[@id='aml_tab']/field/tree/field[@name='partner_id']" position="attributes">
                <attribute name="domain">partner_domain</attribute>
            </xpath>
        </field>
    </record>
</odoo>