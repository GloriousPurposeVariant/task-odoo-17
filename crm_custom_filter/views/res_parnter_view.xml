<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_form_customer_supplier" model="ir.ui.view">
        <field name="name">res.partner.view.form.customer.supplier</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="supplier_code"/>
                <field name="customer_code"/>
            </field>
            <xpath expr="//page[@name='sales_purchases']/group[@name='container_row_2']/group[@name='sale']/field[@name='user_id']" position="before">
                <field name="is_customer" widget="boolean_toggle"/>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']/group[@name='container_row_2']/group[@name='purchase']" position="inside">
                <field name="is_supplier" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>